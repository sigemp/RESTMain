<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field='res' type='com.sigemp.gestion.client.resources.ResourcesImage'/>
    <ui:style>
        
        .labelText {
        /*font-size: smaller;
        font-weight: bold;*/
        font: normal normal 13px Arial, Tahoma, Helvetica, FreeSans, sans-serif;
        text-shadow: 0px 0px 0.5px black;
        }
        
        .title {
        font: normal normal 25px Arial, Tahoma, Helvetica, FreeSans, sans-serif;
        padding-bottom: 30px;
        }
        
        .sg-panel_borde {
        padding: 60px 60px 60px 60px;
        border: 1px solid #808080;
        box-shadow: 0 0 0.5px 0.5px #808080;
        border-radius: 10px;
        background-color: #eee;
        
        
        }

        .button {
        background: #333;
        color: #fff;
        border: 0;
        padding: 7px 6px 6px;
        cursor: pointer;
        }
        
        .button:hover {
        background: black;
        }
    </ui:style>

    <gwt:HTMLPanel>
        <table cellspacing="0" cellpadding="0" style="background: #fff; width: 100%; height: 100%; position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px;">
            <tbody>
                <tr>
                    <td align="center" style="vertical-align: middle;">
                        <table cellspacing="0" cellpadding="0">
                            <tbody>
                                <tr>
                                    <td align="left" style="vertical-align: top;">
                                        <table cellspacing="0" cellpadding="0" class="{style.sg-panel_borde}">
                                            <tbody>
                                                <tr>
                                                    <td align="center" style="vertical-align: top;padding-bottom: 20px;">
                                                        <gwt:Image resource='{res.logoApp}'/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td align="center" class='{style.title}'>
                                                        Iniciar Sesion
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <td align="left" style="vertical-align: top;">
                                                        <table>
                                                            <tbody>
                                                                <tr>
                                                                    <td class='{style.labelText}'>Usuario:</td>
                                                                </tr>
                                                                <tr>
                                                                    <td>
                                                                        <gwt:TextBox ui:field="usuario" />
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td class='{style.labelText}'>Password:</td>
                                                                </tr>
                                                                <tr>
                                                                    <td>
                                                                        <gwt:PasswordTextBox ui:field="password"/>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td align="right" style="height: 40px;vertical-align: bottom;">
                                                        <gwt:Button ui:field="buttonAceptar" styleName='{style.button}' text="Aceptar"> </gwt:Button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
    </gwt:HTMLPanel>
</ui:UiBinder>